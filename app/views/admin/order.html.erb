<% content_for :css do %>
<%= stylesheet_link_tag    'admin-bootstrap.min.css' %>
<%= stylesheet_link_tag    'admin-font-awesome.css' %>
<%= stylesheet_link_tag    'admin-simple-line-icons.css' %>
<%= stylesheet_link_tag    'admin-waves.min.css' %>
<%= stylesheet_link_tag    'admin-jquery.datatables.min.css' %>
<%= stylesheet_link_tag    'admin-jquery.datatables_themeroller.css' %>
<%= stylesheet_link_tag    'admin-meteor.min.css' %>
<%= stylesheet_link_tag    'admin-light-layer.css' %>
<%= stylesheet_link_tag    'admin-custom.css' %>
<% end %>

<% content_for :js do %>
<%= javascript_include_tag 'admin-jquery-ui.min.js' %>
<%= javascript_include_tag 'admin-waves.min.js' %>
<%= javascript_include_tag 'admin-jquery.datatables.min.js' %>
<%= javascript_include_tag 'admin-meteor.min.js' %>
<%= javascript_include_tag 'admin-table-data.js' %>

<%= javascript_include_tag 'history' %>
<%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyBa_JzzSA9iylcZqkcVOEs6J_sTLVOg_fE&libraries=places' %>
<%= javascript_include_tag 'jquery.geocomplete' %>
<% end %>

<div class="compact-menu">
        <div class="overlay"></div>
    
        <main class="page-content content-wrap">
            <div class="navbar">
                <div class="navbar-inner">
                    
                    <div class="logo-box">
                        <a href="index.html" class="logo-text"><span>GO-KUY</span></a>
                    </div><!-- Logo Box -->
                    
                    <div class="topmenu-outer">
                        <div class="top-menu">
                            <ul class="nav navbar-nav navbar-right">
                                <li class="dropdown" >
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <span class="user-name">Admin<i class="fa fa-angle-down"></i></span>
                                        <img class="img-circle avatar" src="assets/images/avatar1.png" width="40" height="40" alt="">
                                    </a>
                                    <ul class="dropdown-menu dropdown-list" role="menu">
                                        <li role="presentation"><%= link_to "Logout", destroy_admin_session_path, :method => :delete %></li>
                                    </ul>
                                </li>
                               
                            </ul><!-- Nav -->
                        </div><!-- Top Menu -->
                    </div>
                </div>
            </div><!-- Navbar -->
            <div class="page-sidebar sidebar">
                <div class="page-sidebar-inner slimscroll">
                    <ul class="menu accordion-menu">
                        <li><%= link_to "Dashboard", admin_home_url, class: "waves-effect waves-button" %></li>
                        <li><%= link_to "User", admin_user_path, class: "waves-effect waves-button" %></li>
                        <li><%= link_to "Driver", admin_driver_path, class: "waves-effect waves-button" %></li>
                        <li class="active"><%= link_to "Order", admin_order_path, class: "waves-effect waves-button" %></li>
                    </ul>
                </div><!-- Page Sidebar Inner -->
            </div><!-- Page Sidebar -->
            <div class="page-inner">
                <div class="page-title">
                    <div class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li><a href="index.html">Home</a></li>
                            <li class="active">Order</li>
                        </ol>
                    </div>
                </div>


                <div id="main-wrapper">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-white">
                                <div class="panel-heading clearfix">
                                    <h4 class="panel-title">List of Orders</h4>
                                </div>
                                <div class="panel-body">
                                   <div class="table-responsive">
                                    <table id="example" class="display table" style="width: 100%; cellspacing: 0;">
                                        <thead>
                                            <tr>
                                                <th>Driver</th>
                                                <th>User</th>
                                                <th>Address</th>
                                                <th>Comment</th>
                                                <th>Rating</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% @orders.each do |order| %>
                                                <tr>
                                                    <td><%= order.driver.name %></td>
                                                    <td><%= order.user.name %></td>
                                                    <td class="history-address"></td>
                                                    <td><%= order.comment %></td>
                                                    <td>
                                                        <% if order.rating.nil? %>
                                                            This user has not given rating yet
                                                        <% else %>
                                                            <% order.rating.times do |i|  %>
                                                                <%= image_tag 'order/star.png' %>
                                                            <% end %>

                                                            <% (order.rating-5).abs.times do |i| %>
                                                                <%= image_tag 'order/empty_star.png' %>
                                                            <% end %>
                                                        <% end %>
                                                            
                                                    </td>
                                                    
                                                </tr>
                                            <% end %>
                                        </tbody>
                                       </table>  
                                    </div>
                                </div>
                            </div>
                
                        </div>
                    </div><!-- Row -->
                </div><!-- Main Wrapper -->
                
                <div class="page-footer">
                    <p class="no-s">Made with <i class="fa fa-heart"></i> by GOKUY</p>
                </div>
            </div><!-- Page Inner -->
        </main><!-- Page Content -->
        
        <div class="cd-overlay"></div>

</div>