<% content_for :css do %>
  <%= stylesheet_link_tag    'style' %>
  <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag    'https://use.fontawesome.com/releases/v5.3.1/css/all.css' %>
<% end %>

<% content_for :js do %>
  <%= javascript_include_tag 'https://code.jquery.com/jquery-3.3.1.min.js' %>
  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' %>
  <%= javascript_include_tag 'main_login_page.js' %>
<% end %>

<div class="login-customer">
    <div class="overlay">
      <div class="login-customer-form signup-customer-form">
        <h2><%= image_tag 'logo.png', class: 'login-goride-image' %></h2>
        <h2>Registration</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', autofocus:true, autocomplete: "email", placeholder: 'Email'%>
          </div>

          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', autocomplete: "name", placeholder: 'Name'%>
          </div>

          <div class="form-group">
            <%= f.telephone_field :phone, class: 'form-control', placeholder: 'Phone Number'%>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", placeholder: 'Password'%>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "password_confirmation", placeholder: 'Confirm Password'%>
          </div>

          <div class="form-group">
            <%= f.submit 'Log in', class: 'btn btn-warning' %>
          </div>
        <% end %>
        <div class="login-customer-form-footer">
          Already have an account?
          <span class="login-customer-signup-link"><a href="signup_customer.html">Log in now >></a></span>
        </div>
      </div>
    </div>
  </div>

<%= render "users/shared/links" %>