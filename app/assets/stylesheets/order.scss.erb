@import url('https://fonts.googleapis.com/css?family=Source+Serif+Pro');
@import url('https://fonts.googleapis.com/css?family=Cuprum');

body {
	font-family: 'Cuprum';
	overflow-x: hidden;
}

.orange-color {
	color: #fdbb1c;
}

.leaflet-routing-container {
	display: none !important;
}

#main-map {
	width: 100%;
	height: 500px;
}

.header-order {
	border-top: 2px solid black;
	border-bottom: 2px solid black;
	padding-bottom: 7px;
	padding-top: 15px;
	margin-bottom: 10px;
	font-size: 25px;
}

.header-order span {
	font-weight: bold;
}

.img-loc {
	width: 40px;
	height: 40px;
	margin-top: 8px;
}

.img-logo {
	width: 50px;
	height: 50px;
	margin-top: -8px;
	margin-left: 5px;
}

#pickup, #dest {
	font-size: 20px;
	padding: 5px 0;
}

#pickup span, #dest span {
	display: block;
}

#pickup .img-logo, #dest .img-logo {
	margin: 2px 0;
}

ul {
	margin: 0;
	margin-top: -5px;
	margin-left: 3px;
}

.container-fluid {
	margin-bottom: 20px;
}

.img-arrow {
	width: 30px;
	margin: 10px 0;
}

.set-pickup, .set-dest {
	cursor: pointer;
}

.set-pickup:hover, .set-dest:hover {
	color: #f6546a;
}

.btn {
	padding: 10px 25px;
	border-radius: 5px;
	background-color: #2e8b57;
	color: #ffffff;
	font-size: 20px;
}

.btn:hover {
	background-color: #fdbb1c;
	color: #000000;
}

#pickup-map, #dest-map {
	width: 100%;
	height: 500px;
}

#pickup-loc, #dest-loc {
	width: 75%;
	padding: 15px;
	border-radius: 5px;
	border: 1px solid black;
	margin-right: 15px;
}

#modal-pickup .modal-footer, #modal-dest .modal-footer {
	text-align: left;
}

.pac-container {
    z-index: 10000 !important;	
    cursor: pointer;
    top: 705px !important;
    left: 17px !important;
}

#img-nav {
	cursor: pointer;
	width: 40px;
	margin-top: -5px;
}

#payment {
	border-top: 2px solid black;
	border-bottom: 2px solid black;
	padding: 15px 0;
	margin: 15px 0;
	font-size: 25px;
	font-weight: bold;
}

.modal-footer .row span {
	font-weight: bold;
	font-size: 25px;
}

.modal-footer img {
	margin-top: -10px;
	margin-left: 8px;
}

#modal-dest .modal-footer img {
	height: 60px;
}

.modal-footer .row {
	margin-bottom: 12px;
}

#dest-name, #pickup-name {
	font-weight: bold;
}

#overlay {
    position: fixed;
    display: none;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 10000;
    cursor: pointer;
}

#text {
    position: absolute;
    top: 50%;
    left: 50%;
    font-size: 50px;
    color: #ffffff;
    transform: translate(-50%,-50%);
    -ms-transform: translate(-50%,-50%);
}

#modal-pickup input[type='text'], #modal-dest input[type='text'] {
	background-image: url('<%= asset_path("order/destination_marker.png") %>');
    background-position: 7px 7px;
    background-repeat: no-repeat;
    background-size: 30px 30px;
    padding-left: 45px;
}

.container-fluid {
	padding: 0;
	margin: 0;
}

.img-driver {
	width: 20%;
	height: 20%;
}

#detail {
	margin-top: 10px;
	margin-bottom: 15px;
}

#detail span {
	font-size: 30px;
}

#detail img {
	float: right;
}

#chat-div {
	width: 20%;
	height: 40px;
	position: fixed;
	bottom: 0;
	right: 0;
	background-color: #c6e2ff;
	border-radius: 5px;
	cursor: pointer;
	font-size: 20px;
	padding: 10px 0;
	color: #bc3e1a;
	display: none;
	z-index: 1000;
}

.img-chat {
	width: 30px;
	margin: 0 10px;
}

#modal-chat .modal-body {
	height: 400px;
}

#modal-chat .modal-footer {
	text-align: left;
	padding: 0 10px;
	padding-top: 10px;
}

#modal-chat {
	.type_msg {
		border-top: 1px solid #c4c4c4;
		border-bottom: 1px solid #c4c4c4;
		position: relative;
	}

	.input_msg_write input {
		background: rgba(0, 0, 0, 0) none repeat scroll 0 0;
		border: medium none;
	  	color: #4c4c4c;
	  	font-size: 15px;
	  	min-height: 48px;
	  	width: 100%;
	}

	.msg_send_btn {
		background: #05728f none repeat scroll 0 0;
		border: medium none;
		border-radius: 50%;
		color: #fff;
		cursor: pointer;
		font-size: 17px;
		height: 33px;
		position: absolute;
		right: 0;
		top: 11px;
		width: 33px;
	}

	.top_spac { 
		margin: 0;
	}

	.mesgs {
	  	float: left;
	  	padding: 20px 15px 0 0;
	  	width: 100%;
	}

	.msg_history {
	  	height: 350px;
	  	overflow-y: auto;
	}

	.received_msg {
	  	display: inline-block;
	  	padding: 0 0 0 10px;
	  	vertical-align: top;
	  	width: 92%;
	  	margin-bottom: 25px;
	}

  	.received_withd_msg p {
	  	background: #ebebeb none repeat scroll 0 0;
	  	border-radius: 3px;
	  	color: #646464;
	  	font-size: 14px;
	  	margin: 0;
	  	padding: 5px 10px 5px 12px;
	  	width: 100%;
	}

	.received_withd_msg { 
		width: 57%;
	}

	.time_date {
  		color: #747474;
	 	display: block;
	  	font-size: 12px;
	  	margin: 8px 0 0;
	}

	.outgoing_msg { 
		overflow: hidden; 
		margin-bottom: 25px;
	}

	.sent_msg p {
	  	background: #05728f none repeat scroll 0 0;
	  	border-radius: 3px;
	  	font-size: 14px;
	  	margin: 0; color:#fff;
	  	padding: 5px 10px 5px 12px;
	  	width:100%;
	}

	.sent_msg {
	  	float: right;
	  	width: 46%;
	}
}